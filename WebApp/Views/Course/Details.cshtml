@using WebApp.CustomHelpers
@using WebApp.Globalization.Views

@section javascript {
    <script src="@Url.ContentNoCache("~/Scripts/Pages/DetailsCourse.js")"></script>
    @Html.RenderGlobalizationMessagesContent(typeof(WebApp.Globalization.Scripts.DetailsCourseStrings),
    typeof(WebApp.Globalization.Scripts.MigrationResultStrings))
}
<div id="page-course-details" class="panel panel-default">
    <input type="hidden" id="hd-course-id" value="@ViewBag.CourseId"/>
    <input type="hidden" id="hd-account-id" value="@ViewBag.AccountId" />
    <div class="panel-heading">
        <h4 class="title-course">&nbsp;</h4>
    </div>
    <div class="panel-body">
        <div class="form-horizontal col-md-12">
            <div>
                <div class="form-group row col-md-12">
                    <label for="txt-id-gestor" class="text-left control-label col-md-3">@CourseStrings.LabelIdAsignatura:</label>
                    <div class="col-md-9">
                        <p id="txt-id-gestor" class="form-control-static">&nbsp;</p>
                    </div>
                </div>
                <div class="form-group row col-md-12">
                    <label for="txt-nombre-asignatura" class="text-left control-label col-md-3">@CourseStrings.LabelNombreAsignatura:</label>
                    <div class="col-md-9">
                        <p id="txt-nombre-asignatura" class="form-control-static">&nbsp;</p>
                    </div>
                </div>
                <div class="row col-md-6 col-md-offset-3">
                    <button type="button" id="btn-migrar-curso" class="btn btn-default">@CourseStrings.BtnMigrarCursoIndividual</button>
                    <button type="button" id="btn-volver" class="btn btn-default">@CommonStrings.BtnVolver</button>
                </div>
            </div>
        </div>
    </div>
</div>